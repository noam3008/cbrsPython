import csv
from controllers.CLIUtils.Step import Step
import errno
import os
class CsvFileParser(object):
    '''
    classdocs
    '''


    def __init__(self,csvFileName):
        '''
        Constructor
        '''
        self.csvFileName = csvFileName
        
    def initializeTestDefinition(self):
        steps = []
        steps2 = []
        try:
            with open(self.csvFileName+".csv") as csvfile:
                reader = csv.DictReader(csvfile)
                reader2 = csv.DictReader(csvfile)
                columns = len(next(reader2))
                del reader2
                for row in reader:   
                    for index in xrange(columns):  
                        print 'jsonFileName'+str(index+1)    
                        steps.append(Step(row["jsonFileName"+str(index+1)]))
                        steps2.append(Step(row['jsonFileName'+str(index+1)]))
            return steps
        except:
            raise IOError("the file " + self.csvFileName + " not found")
        
