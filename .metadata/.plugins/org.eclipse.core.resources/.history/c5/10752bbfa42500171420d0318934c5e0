# conftest.py
import pytest

from flaskSocket import main


@pytest.fixture
def app():
    app = main()
    app.debug = True
    return app

import pytest
from flask import url_for


class TestApp:

    def test_ping(self, client):
        res = client.get(url_for('ping'))
        assert res.status_code == 200
        assert res.json == {'ping': 'pong'}
        
app()
TestApp.test_ping(self, client)