import csv
from testing.Step import Step
class CsvFileParser(object):
    '''
    classdocs
    '''


    def __init__(self,csvFileName):
        '''
        Constructor
        '''
        self.csvFileName = csvFileName
        
    def initializeTestDefinition(self):
        steps = [[]]
        with open(self.csvFileName) as csvfile:
            reader = csv.DictReader(csvfile)
            for row in reader:         
                print(row['stepType'], row['jsonFileName'])
                steps.append(Step(row['stepType'], row['jsonFileName']))
        return steps




csvfileParser = CsvFileParser("C:\Users\iagmon\Desktop\exampleTest.csv")
csvfileParser.initializeTestDefinition()