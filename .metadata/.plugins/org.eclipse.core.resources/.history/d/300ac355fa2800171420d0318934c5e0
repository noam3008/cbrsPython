from flask import Flask,request
from flask.views import View

class MyClass(View):
    '''
    classdocs
    '''
    app = Flask(__name__)
    methods=['POST']


    def __init__(self):
        '''
        Constructor
        '''
    def dispatch_request(self):
        # request.method == 'POST'
        name = request.form.get('name', 'Damyan')
        return 'Hello, %s!' % name
    
    def runFlask(self):
            self.app.run(host="10.3.35.58",threaded=True)
            
myClass = MyClass()
myClass.runFlask()
myClass.app.add_url_rule('/say-hi', view_func= MyClass.as_view('MyClass'))