from flask import Flask
from model.Utils2.FlaskClassy import FlaskView,route

class MyClass(object):
    '''
    classdocs
    '''
    app = Flask(__name__)


    def __init__(self):
        '''
        Constructor
        '''
        
    @app.route('/helloesp')
    def helloHandler(self):
        return 'Hello ESP8266, from Flask'

    @route('/word_bacon/')
    def api_root(self):
        return 'Welcome'
    
    def runFlask(self):
            self.app.run(host="10.3.35.58",threaded=True)
            
myClass = MyClass()
myClass.runFlask()