from flask import Flask
from flask.views import View

class MyClass(View):
    '''
    classdocs
    '''
    app = Flask(__name__)


    def __init__(self):
        '''
        Constructor
        '''
        
    @app.route('/helloesp')
    def helloHandler(self):
        return 'Hello ESP8266, from Flask'

    @FlaskView.build_rule("/")
    def api_root(self):
        return 'Welcome'
    
    def runFlask(self):
            self.app.run(host="10.3.35.58",threaded=True)
            
myClass = MyClass()
myClass.runFlask()