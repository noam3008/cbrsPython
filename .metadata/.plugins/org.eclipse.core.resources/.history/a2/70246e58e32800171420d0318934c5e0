from model.Engine import MyEngine
from TestDefinition import TestDefinition
from testing.Step import Step
import logging
class Mcontroller(object):
    '''
    classdocs
    '''
    def __init__(self, TestDefinition):
        '''
        Constructor
        '''
        self.testSteps = TestDefinition
        self.engine = MyEngine() 
        global numberOfReq 
        numberOfReq = 0
    
    ''' the method get the step list and sent to the engine the correct json file name to wait for '''
    def sentToEngineJsonByStep(self):
        logging.info("mController sent json file name " + self.testSteps.jsonNamesOfSteps[numberOfReq] + " to the engine")
        self.engine.setEngineJsonExpectedFileName(self.testSteps.jsonNamesOfSteps[numberOfReq])
        print self.engine.jsonFileName
        
    def setNumberOfReq(self):
        self.numberOfReq += 1
    
              
    
        
        