import csv
from controllers.CLIUtils.Step import Step
import errno
import os
class CsvFileParser(object):
    '''
    classdocs
    '''


    def __init__(self,csvFileName):
        '''
        Constructor
        '''
        self.csvFileName = csvFileName
        
    def initializeTestDefinition(self):
        self.get_Number_Of_Cols()
        steps = [[]]
        try:
            with open(self.csvFileName+".csv") as csvfile:
                reader = csv.DictReader(csvfile)
                i=1
                for row in reader:         
                    steps[0].append(Step(row['jsonFileName']))
            return steps
        except:
            raise IOError("the file " + self.csvFileName + " not found")
        
    def get_Number_Of_Cols(self):
        i = 1
        with open(self.csvFileName+".csv") as csvfile:
            a1 = [row['jsonFileName'] for row in csv.DictReader(csvfile)]
            print a1
            
            csv_path = self.csvFileName+".csv"
csv_database = open(csv_path, delimiters=";")    
data_dict = csv.DictReader(csv_database, delimiter=";")

current_row = 0

number_list = []

for row in data_dict:

    current_row += 1 # Skip heading row

    if current_row == 1:
        continue

    number_list.append(row["Number"]) # Assuming the header of your column is "Number"

# Show results

for number in number_list:
