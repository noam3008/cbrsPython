from flask import Response

@app.route('/cbsd/<typeOfCalling>',methods=['POST'])
def generate_large_image(typeOfCalling):
    def generate():
        while True:
            if typeOfCalling == "registration"
                yield ""
            else:
                yield get_image()
    return Response(generate(), mimetype='image/jpeg')

def runFlaskServer():
    app.run()



