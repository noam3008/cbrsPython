import logging

from model.Engine import MyEngine


class ENodeBController(object):
    '''
    classdocs
    '''


    def __init__(self,engine):
        '''
        Constructor
        '''
        self.engine = engine
        
    def linksBetweenFlaskReqToEngineResponse(self,jsonReq):######### while flask change it to the request of flask
        ##self.engine.process_request(httpRequest)
        logging.info("the enode B controller sent the request he gets from the client to the engine")
        return self.engine.process_request(jsonReq)
        #response = self.engine.process_request(jsonName)
        #return self.sentResponseToClient(response)
    
    def sentResponseToClient(self,responseFromEngine):
        logging.info("the enodeB controller sent the engine response " + str(responseFromEngine) + " to the client")
        return str(responseFromEngine)#responseFromEngine
    
        
        