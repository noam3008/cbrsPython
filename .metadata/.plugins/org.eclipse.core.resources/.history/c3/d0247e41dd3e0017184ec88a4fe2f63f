import csv
from controllers.CLIUtils.Step import Step
import errno
import os
class CsvFileParser(object):
    '''
    classdocs
    '''


    def __init__(self,csvFileName):
        '''
        Constructor
        '''
        self.csvFileName = csvFileName
        
    def initializeTestDefinition(self):
        self.get_Number_Of_Cols()
        steps = [[]]
        try:
            with open(self.csvFileName+".csv") as csvfile:
                reader = csv.DictReader(csvfile)
                i=1
                for row in reader:         
                    steps[0].append(Step(row['jsonFileName'+i]))
            return steps
        except:
            raise IOError("the file " + self.csvFileName + " not found")
        
    def get_Number_Of_Cols(self):
        i = 1
        with open(self.csvFileName+".csv") as csvfile:
            a1 = [row['jsonFileName'+i] for row in csv.DictReader(csvfile)]
            
            

        
            



