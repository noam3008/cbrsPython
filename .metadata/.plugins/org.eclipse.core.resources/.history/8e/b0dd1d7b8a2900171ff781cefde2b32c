from flask import Flask
from flask_restplus import Resource,Api
 
app = Flask(__name__)
api = Api(app)
 
@app.route('/helloesp')
def helloHandler():
    return 'Hello ESP8266, from Flask'

@app.route('/')
def api_root():
    return 'Welcome'
    
