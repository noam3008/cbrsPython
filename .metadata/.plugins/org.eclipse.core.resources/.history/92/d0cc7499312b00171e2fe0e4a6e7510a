import signal

import time
import thread   # For the demo only
from threading import Thread

def signal_handler(signal, frame):
    global interrupted
    interrupted = True

signal.signal(signal.SIGINT, signal_handler)

def set_interrupt():
    print ("Ss")
    global interrupted
    interrupted = True



interrupted = False
while True:
    print("Working hard...")
    time.sleep(3)
    print("All done!")

    if interrupted:
        print("Gotta go")
        break
time.sleep(1)
Thread.join(self, 4)