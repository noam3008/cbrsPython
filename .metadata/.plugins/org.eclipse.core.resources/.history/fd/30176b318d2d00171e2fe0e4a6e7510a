from flask import Flask,request,jsonify,g,redirect,url_for
import sys
from controllers.ENodeBController import ENodeBController
app = Flask(__name__)

enodeBController = ENodeBController(None)
@app.route('/cbsd/<typeOfCalling>',methods=['POST'])
def sentFlaskReqToServer(typeOfCalling):  
    validationErrorMessage = "An Error Accured while comparing between actual and expected request"
    x = enodeBController.linkerBetweenFlaskToEngine(request.get_json(),typeOfCalling)
    #if(responseAndValidationSuccess==False):
    #    app.get("/shutdown")
    if(validationErrorMessage in x):
        return redirect(url_for('shutdown', messages=validationErrorMessage))
    return x
        
@app.route('/shutdown', methods=['POST'])
def shutdown():
    """Shutdown the Werkzeug dev server, if we're using it.
    From http://flask.pocoo.org/snippets/67/"""
    func = request.environ.get('werkzeug.server.shutdown')
    if func is None:  # pragma: no cover
        raise RuntimeError('Not running with the Werkzeug Server')
    func()
    return "Server shutting down due to " + str(request.args['messages'])


def runFlaskServer():
    app.run()
    



