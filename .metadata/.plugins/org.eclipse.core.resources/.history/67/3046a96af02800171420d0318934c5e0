from flask import Flask
class MyClass(object):
    '''
    classdocs
    '''
    app = Flask(__name__)


    def __init__(self, params):
        '''
        Constructor
        '''
        
    @app.route('/helloesp')
    def helloHandler(self):
        return 'Hello ESP8266, from Flask'

    @app.route('/')
    def api_root(self):
        return 'Welcome'
    
    def runFlask(self):
        if __name__ == '__main__':
            self.app.run(host="10.3.35.58",threaded=True)
            
myClass = MyClass(self)
myClass.runFlask()