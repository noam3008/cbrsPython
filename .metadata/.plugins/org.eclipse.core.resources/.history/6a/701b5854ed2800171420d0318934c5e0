from flask import Flask
from flask_api.tests.test_app import app
class FlaskServer(object):
    '''
    classdocs
    '''
    def __init__(self):
        '''
        Constructor
        '''
        app = Flask(__name__)
        
    @app.route('/')
    def api_root(self):
        return 'Welcome'
        
    def runFlask(self,ip,clietnPort):
        self.app.run(host=ip,port=clietnPort,threaded=True)