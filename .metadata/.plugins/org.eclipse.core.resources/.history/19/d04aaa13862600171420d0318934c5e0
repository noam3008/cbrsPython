import Engine

class TestEngine(object):
    '''
    classdocs
    '''

    def setup(self):        
        self.engine = Engine(TestDefinition)
        
    
    def test_successful_request(self):
        valid_json = 
        {
            "name":"Spectrum_Inquiry_10_3_4_2_5_3",  
            "validation": 
            {
            "request":{
                "spectrumInquiryRequest":
                [
                    {
                        "cbsdid" : "${cbsid}",
                        "inquiredSpectrum" :
                        [
                            {
                                "frequencyRange" : 
                                {
                                    "lowFrequency" : "${range:7000-8000}",
                                    "highFrequency" : 8000
        
                                },
                                "channelType":"PAL",
                                "ruleApplied":"${regex:PART_\d{2}}"
                            }
        
                        ],"measReport" : 
                        {
                            "eutraCarrierRssiRpt": 
                            [
                                {
                                    "measFrequency" : 7000,
                                    "measBandwidth" : 8000,
                                    "measCarrierRssi" : 12
                                }
        
                            ]
                        }
        
                    }
                ]}
        
            }
        }
        response = self.engine.process_request(valid_json)
        # Assert that the response is the expected response 
        
    def  test_unsuccessful_request(self):
        invalid_json = "";
        response = self.engine.process_request(invalid_json)
        # Assert that an exception was thrown
        
        
    
    
class TestDefinition(object):
    
    def __init__(self):
        pass 